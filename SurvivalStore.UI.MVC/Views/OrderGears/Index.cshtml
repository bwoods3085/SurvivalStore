@model IEnumerable<SuvivalStore.DATA.EF.Models.OrderGear>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GearPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GearPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gear.GearName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.UserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderGearId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OrderGearId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrderGearId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
